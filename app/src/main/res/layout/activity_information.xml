<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/informationToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/Theme.MyFancyTheme" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="@string/LoremIpsum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informationToolBar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/phoneIcon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_phone_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="277dp"
        android:layout_height="47dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="@string/LoremIpsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="277dp"
        android:layout_height="47dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:text="@string/LoremIpsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/locationIcon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/ic_location_on_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/phoneIcon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="277dp"
        android:layout_height="47dp"
        android:layout_margin="@dimen/fab_margin"
        android:text="@string/LoremIpsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/emailIcon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/ic_email_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/locationIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>
